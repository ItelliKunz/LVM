<?xml version="1.0" encoding="UTF-8"?>
<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:com="sap.ui.commons" controllerName="lvm.FirstView"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.commons.layout" xmlns:ul="sap.ui.layout" xmlns:cal="sap.ui.unified.calendar">

	<Page backgroundDesign="Transparent" title="Veranstaltungsbrowser">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Veranstaltungsbrowser" level="H2"/>
				<ToolbarSpacer/>
				<!-- <Button icon="sap-icon://edit" press="onPress" ariaLabelledBy="editButtonLabel"/> -->
			</Toolbar>
 
		</customHeader>
		<content>
			<ul:Splitter orientation="Vertical" >
				<VBox>
<!-- 					<com:HorizontalDivider /> -->
					<Panel>
						<l:VerticalLayout width="25%" />

						<l:VerticalLayout width="50%">
							<!-- <com:layoutData><ul:SplitterLayoutData size="auto" /></com:layoutData> -->
							<Panel>
								<l:HorizontalLayout>
									<Input width="100%" description="Akademische Periode"
										placeholder="Sommersemester..." tooltip="WiSe / SoSe"
										textAlign="Begin" />
									<Input width="100%" description="Akademisches. Jahr"
										placeholder="Jahr angeben..." tooltip="Akademisches Jahr eingeben (Zahlenwert)"
										type="Number" textAlign="Begin" />
									<!-- <cal:YearPicker year="2016"/> -->
								</l:HorizontalLayout>
							</Panel>
							<Panel>
								<l:HorizontalLayout>
									<DatePicker name="Name" id="DP1" placeholder="Datum von: 2016-01-01"
										valueFormat="yyyy-MM-dd" displayFormat="long" change="handleChange"
										class="sapUiSmallMarginBottom" />
									<DatePicker id="DP2" description="Datum bis"
										placeholder="Datum bis: 2016-07-01" valueFormat="yyyy-MM-dd"
										displayFormat="long" change="handleChange" class="sapUiSmallMarginBottom" />

									<Button width="150px" text="Suchen" press="startSearch" />
								</l:HorizontalLayout>
							</Panel>

						</l:VerticalLayout>
						<l:VerticalLayout width="20%" />
					</Panel>

				</VBox>
				<VBox height="100%">
					<com:HorizontalDivider />
					<ScrollContainer>
						<t:TreeTable title="Lehrveranstaltungen und Events:" editable="False" id="tbl"
							rows="{path:'/' , parameters:{arrayNames:['data']}}"
							visibleRowCount="10"
							threshold="60"
							selectionMode="Single"
							noDataText="Es existieren keine geplanten Lehrveranstaltungen"
							>
					<!-- 		<Toolbar >
								<Button text="Add child" press="addNode" />
							</Toolbar> -->
							<t:columns>
								<!-- LEVEL 1 -->
								<t:Column width="20rem" tooltip="TOP-SM / D Modultyp / Event">
									<t:label>
										<Label text="TOP-SM / D / E" />
									</t:label>
									<t:template>
										<com:TextView text="{name}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Planvariante">
									<t:label>
										<Label text="PlanVariante" />
									</t:label>
									<t:template>
										<com:TextView text="planVariante" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Bezeichnung mit Object ID des Moduls">
									<t:label>
										<Label text="Bezeichnung Object ID" />
									</t:label>
									<t:template>
										<com:TextView text="{objectID}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Objekttyp des Moduls">
									<t:label>
										<Label text="Object Typ" />
									</t:label>
									<t:template>
										<com:TextView text="{objectType}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Akademisches Jahr des Moduls">
									<t:label>
										<Label text="Akad Jahr" />
									</t:label>
									<t:template>
										<com:TextView text="{akademischesJahr}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Akademische Perdiode des Moduls">
									<t:label>
										<Label text="Akad Periode" />
									</t:label>
									<t:template>
										<com:TextView text="{akademischePeriode}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Datumw ann das Event beginnt">
									<t:label>
										<Label text="Begin Datum" />
									</t:label>
									<t:template>
										<com:TextView text="{beginDate}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Datum wann das Event endet">
									<t:label>
										<Label text="Ende Datum" />
									</t:label>
									<t:template>
										<com:TextView text="{endDate}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Kürzel evtl noch zu ändern">
									<t:label>
										<Label text="Kürzel evtl " />
									</t:label>
									<t:template>
										<com:TextView text="{shortName}" />
									</t:template>
								</t:Column>

								<!-- LEVEL 2: SM: plus von oben: ObjectTyp(SM), Object ID, Kürzel 
									(evtl), Bezeichnung, ParentID -->
								<t:Column tooltip="Angebotsmuster">
									<t:label>
										<Label text="Angebotsmuster" />
									</t:label>
									<t:template>
										<com:TextView text="{Angebotsmuster}" />
									</t:template>
								</t:Column>
								<!-- LEVEL 3 >> LEVEL (n-1) = D plus von oben: ObjectTyp(D), Object 
									ID, Kürzel (evtl), Bezeichnung, ParentID -->
								<t:Column tooltip="ummy Spalte für LEVEL 3 bis N">
									<t:label>
										<Label text="Dummy" />
									</t:label>
									<t:template>
										<com:TextView text="{abc}" />
									</t:template>
								</t:Column>
								<!-- LEVEL N plus von oben: ObjectTyp(E), Object ID, Kürzel (evtl), 
									Bezeichnung, ParentID -->
								<t:Column tooltip="Aufwand in Stunden">
									<t:label>
										<Label text="Aufwand in Stunden" />
									</t:label>
									<t:template>
										<com:TextView text="{Aufwand}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Termine/Raum/Dozent">
									<t:label>
										<Label text="Termine/Raum/Dozent" />
									</t:label>
									<t:template>
										<com:TextView text="{realo}" />
									</t:template>
								</t:Column>
								<!-- * Termine ("intelligente" Beschreibung der Terminserie) * Räume 
									(alle Räume, komma-getrennt, wenn zu lang abgekürzt) * Dozenten (alle Dozenten, 
									komma-getrennt, wenn zu lang abgekürzt) -->

								<t:Column tooltip="Planungsstatus">
									<t:label>
										<Label text="Planungsstatus" />
									</t:label>
									<t:template>
										<com:TextView text="{iState}" />
									</t:template>
								</t:Column>
								<t:Column tooltip="Planugnsnotiz">
									<t:label>
										<Label text="Planugnsnotiz" />
									</t:label>
									<t:template>
										<com:TextArea editable="False" placeholder="Planungsnotiz"
											value="{Planungsnnotiz}" />

										<!-- <com:TextView text="{Planugnsnotiz}" /> -->
									</t:template>
								</t:Column>
								<t:Column autoResizable="True" tooltip="Event im Editorscreen editieren">
									<t:label>
										<Label text="Event Editieren" />
									</t:label>
									<t:template>
										<Button  text="Edit" press="onJumpToEditorScreen" />
									</t:template>
								</t:Column>

								<t:Column tooltip="Neues Event mit diesem Typ anlegen">
									<t:label>
										<Label text="Neues Event " />
									</t:label>
									<t:template>
										<Button text="Neues Event anlegen" press="addNode" />
									</t:template>
								</t:Column>
							</t:columns>
						</t:TreeTable>
						<PullToRefresh
							id="pullToRefresh"
							refresh="handleRefresh" />
					</ScrollContainer>
				</VBox>
			</ul:Splitter>
		</content>
	</Page>
</core:View>